<?xml version="1.0" encoding="UTF-8" ?> 
 
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dongne.tour.TreplyMapper">
	
<insert id="create"
		parameterType="Map">
		insert into treply(trid, tid, content, rdate )
		values((select nvl(max(trid),0)+1 from treply),#{tid},
		#{content}, sysdate)
</insert>


<delete id="delete" parameterType="int">
		DELETE FROM treply
		WHERE trid=#{trid}
</delete>  

<select id="list" parameterType="Map" resultType="com.dongne.tour.TreplyDTO">
	select * from treply
</select>
 
<select id="total" resultType="int" parameterType="int">
select count(*) from treply
where tid=#{tid}
</select>


</mapper>

