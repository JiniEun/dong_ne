<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.dongne.message.MessageMapper">
    <select id="countMessageView" resultType="String" parameterType="String">
        select count(*) from message where ID= #{ID} and cate = 0
    </select>
    <select id="findList" resultType="com.dongne.message.MessageDTO" parameterType="String">
            select * from message where ID= #{ID} and cate = 0
    </select>    
 
    <insert id="insertMessage" parameterType="com.dongne.message.MessageDTO">
        INSERT INTO message(title,recvNick,cate,rdate,content,sendNick,ID,readChk) 
        VALUES(#{title},#{recvNick},#{cate},SYSDATE,#{content},#{sendNick},#{ID},#{readChk});
    </insert>
        
</mapper>